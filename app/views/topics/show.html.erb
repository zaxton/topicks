<div class="comments_show">
	<div class="topic_show_area">
		<%= gravatar_for @topic.user, :size => 45 %>
		<%= @topic.content %><br \>
		<div class="topic_show_time">
		Posted <%= time_ago_in_words(@topic.created_at) %> ago.
		</div>
	</div>
	<div class="new_comment">
		<%= form_for(@comment, @comment.topic_id = @topic.id) do |f| %>
			<%= f.text_area :content, :rows => 8 %>
			<%= f.hidden_field :topic_id %>
			<%= f.submit "Post" %>
		<% end %>
	</div>
	<div class="all_comments">
		<% unless @comments.empty? %>
		<%  @comments.each do |comment| %>
			<div class="comment">
			  <div class="created_at"><%= comment.created_at.strftime("%B %d, %Y") %></div>
			  <div class="content">
			    <%= link_to "#{comment.content}", comment %>
			  </div>
			</div>
		<% end %>
		<% end %>
	</div>
	
</div>